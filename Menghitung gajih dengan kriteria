total_belanja = 70000
jumlah_yang_harus_dibayar = total_belanja - 10000 if total_belanja > 60000 else total_belanja
print("Jumlah yang harus dibayar di Indomaret adalah:", jumlah_yang_harus_dibayar)

gaji_pokok = 5000000
uang_transport_harian = 100000
uang_makan = 50000
jam_lembur = 3

total_transport = uang_transport_harian * 30
total_makan = uang_makan * 30
upah_lembur = 100000 * min(jam_lembur, 2) + 150000 * max(jam_lembur - 2, 0)
total_honor = gaji_pokok + total_transport + total_makan + upah_lembur
print("Total honor yang diterima adalah:", total_honor)
